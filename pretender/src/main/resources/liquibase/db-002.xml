<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- Add Global Secondary Index (GSI) and Time-To-Live (TTL) support -->
    <changeSet id="2024-12-30-01" author="wolpert">
        <comment>Add GSI and TTL columns to PDB_TABLE</comment>

        <!-- GSI definitions stored as JSON array -->
        <addColumn tableName="PDB_TABLE">
            <column name="GLOBAL_SECONDARY_INDEXES" type="CLOB">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <!-- TTL attribute name -->
        <addColumn tableName="PDB_TABLE">
            <column name="TTL_ATTRIBUTE_NAME" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <!-- TTL enabled flag -->
        <addColumn tableName="PDB_TABLE">
            <column name="TTL_ENABLED" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
