<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- Add DynamoDB Streams support -->
    <changeSet id="2025-01-01-01" author="claude">
        <comment>Add DynamoDB Streams columns to PDB_TABLE</comment>

        <!-- Stream enabled flag -->
        <addColumn tableName="PDB_TABLE">
            <column name="STREAM_ENABLED" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <!-- Stream view type (KEYS_ONLY, NEW_IMAGE, OLD_IMAGE, NEW_AND_OLD_IMAGES) -->
        <addColumn tableName="PDB_TABLE">
            <column name="STREAM_VIEW_TYPE" type="varchar(32)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <!-- Stream ARN -->
        <addColumn tableName="PDB_TABLE">
            <column name="STREAM_ARN" type="varchar(512)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <!-- Stream label (timestamp-based identifier) -->
        <addColumn tableName="PDB_TABLE">
            <column name="STREAM_LABEL" type="varchar(128)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
